@section Scripts{
    <script>
        $(function () {
            $("a.btn.buy.btn-danger").click(function (e) {
                e.preventDefault();
                var productId = $(this).attr("product");
                $.ajax({
                    url: '@Url.Action( MVC.ShoppingCart.AddToCart () )',
                    data: { id: productId, count: 1 },
                    type: "Post",
                    dataType: "Json",
                    success: function (result) {
                        if (result.Success) {
                            $.ajax({
                                url: '@Url.Action( MVC.ShoppingCart.TotalPrice () )',
                                type: "Post",
                                cache:false,
                                success: function(result) {
                                    $(".cart-container").html(result);
                                },
                                error: function () {
                                    alert("error");
                                }
                            });
                        }
                        eval(result.Script);
                    },
                    error: function () {
                        alert("error");
                    }
                });
            });

            $(".icon-remove-sign").click(function (e) {
                e.preventDefault();
                var id = $(this).attr("productid");
                var img = $(this);
