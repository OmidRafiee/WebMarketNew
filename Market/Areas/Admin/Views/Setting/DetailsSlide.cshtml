@model WebMarket.ViewModel.Admin.Setting.SlideShowDataEntry
@{
    ViewBag.Title = "جزئیات اسلایدر"; ;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            عنوان بزرگ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BigTitle)
        </dd>

        <dt>
            عنوان کوچک
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SmallTitle)
        </dd>

        <dt>
            توضیحات
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            لینک
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt>
            نام تصویر
        </dt>

        <dd>
            @Html.ImageFor(model => model.Image, new {@alt =Model.Image , width = "350", height = "90" }, "notfound.jpg", "Files", "SlideShowImages")
            
        </dd>
    

    </dl>
</div>
<p>
    @Html.ActionLink("ویرایش", MVC.Admin.Setting.EditSlide(Model.Id), new { @class = "btn  btn-success" })
    @Html.ActionLink("انصراف",MVC.Admin.Setting.ListSlide(),new { @class = "btn  btn-default" })
</p>
