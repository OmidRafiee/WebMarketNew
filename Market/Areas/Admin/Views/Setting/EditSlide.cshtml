@model WebMarket.ViewModel.Admin.Setting.SlideShowDataEntry

@{
    ViewBag.Title = "ویرایش اسلاید شو";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


    @using (Html.BeginForm(MVC.Admin.Setting.EditSlide(), FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "formSlideShow" }))
    {
        @Html.AntiForgeryToken()

         @Html.HiddenFor(model => model.Id)
        
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.BigTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.BigTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BigTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SmallTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.SmallTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SmallTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    <input type="file" class="filestyle" data-icon="true" name="uploadImage" id="uploadImage" accept=".jpg, .jpeg, .gif, .png" placeholder="اندازه تصویر بهتر است  377* 1400 باشد">
                    اندازه تصویر بهتر است 377 * 1400 باشد
                    @Html.HiddenFor(model => model.Image)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت ویرایش" class="btn btn-success btn-large push-down-10" />
            </div>
        </div>

    }

@section Script{
    <script src="@Url.Content( "~/Scripts/AjaxForm/jquery.form.min.js" )"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-filestyle.min.js" )"></script>
    <script>
        $("#formSlideShow").ajaxForm();
    </script>

}
