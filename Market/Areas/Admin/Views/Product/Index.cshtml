@model IEnumerable<WebMarket.ViewModel.Admin.Product.ProductsViewModel>
@{
    ViewBag.Title = "Products";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@*@Html.ActionLink("افزودن محصول جدید", MVC.Admin.Product.Create(), new { @class = "btn btn-primary push-down-10" })*@

<div id="ListProduct">

   @* @Html.Partial("_SearchProduct")*@

        <div class="block-standart">

            @*@Html.Partial("_ListProducts")*@

            <div class="row">
                <div class="col-lg-12" style="position:inherit">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="title-area">لیست محصولات</h4>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                    <div class="row">
                                        @*<div class="col-sm-6">
                                                <div class="dataTables_length" id="dataTables-example_length">
                                                    <label>Show <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label>
                                                </div>
                                            </div>*@
                                        @*<div class="col-sm-6">
                                                <div id="dataTables-example_filter" class="dataTables_filter">
                                                    <label>Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="dataTables-example"></label>
                                                </div>
                                            </div>*@
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @*table table-hover table-striped*@
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayName("تصویر محصول")
                                                        </th>
                                                        <th>
                                                            @Html.DisplayName("نام محصول")
                                                        </th>
                                                        <th>
                                                            @Html.DisplayName("گروه محصول")
                                                        </th>
                                                        <th>
                                                            @Html.DisplayName("قیمت محصول")
                                                        </th>
                                                        <th>
                                                            @Html.DisplayName("عملیات")
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @* <img src="@Url.Content( "~/Files/UploadImages/" + item.Image )" width="80"/>*@
                                                                @Html.ImageFor(modelItem => item.Image,
                                                                        new { width = "55" , height="55" },
                                                                        "notfound.jpg",
                                                                        "Files",
                                                                     "ProductImages")
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.GroupName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Price)
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("ویرایش",MVC.Admin.Product.ActionNames.Edit, new { id = item.Id })
                                                               |@Html.ActionLink( "حذف" ,MVC.Admin.Product.Delete ( item.Id ) ,
                                                                                  new { onclick = "return confirm('جهت حذف مطمئن هستید ؟')" } )
                                                            </td>
                                                        </tr>

                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                                <ul class="pagination"><li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#">Previous</a></li><li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#">1</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">2</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">3</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">4</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">5</a></li><li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#">Next</a></li></ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
 
</div>
